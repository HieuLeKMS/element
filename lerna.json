{
	"lerna": "2.11.0",
	"packages": ["packages/*"],
	"command": {
		"exact": true
	},
	"publish": {
		"conventionalCommits": true
	},
	"version": {
		"message": "chore(release): publish %s\n[skip ci]",
		"allowBranch": ["master", "beta", "feature/*"]
	},
	"bootstrap": {
		"npmClient": "yarn"
	},

	"ignoreChanges": ["assets", "coverage", "examples", "scripts", "smoke"]
}
