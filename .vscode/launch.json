{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "element-cli",
			"type": "node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/element-cli/src/bin/element.ts"],
			"skipFiles": ["<node_internals>/**"],
			"runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"protocol": "inspector"
		},
		{
			"name": "element-cli:dist",
			"type": "node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/element-cli/bin/element.js"],
			"skipFiles": ["<node_internals>/**"],
			"runtimeArgs": ["--nolazy"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"protocol": "inspector",
			"preLaunchTask": "build"
		}
	]
}
